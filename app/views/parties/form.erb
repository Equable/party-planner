<%if @error%>
    <h3><%=@error%></h3>
<%end%>

<form method='POST' action='/parties/new'>
    <label name='name'>Party Name: </label>
    <input type='text' name ='name' id = 'name' value =<%=@party_name%>></input>
    <label name='party-planner'>Party Planner: </label>
    <select name='party-planner'>
        <%@planners.each do |planner|%>
            <option value=<%=planner.id%> <%="selected" if planner.id == @planner.id %> ><%=planner.name%></option>
        <%end%>
    </select>
    <label name='details'>Details: </label>
    <input type='text' name='details' id='details' value =<%=@party_details%>></input>
    <label name='location'>Location: </label>
    <input type='text' name='location' id='location' value=<%=@party_details%>></input>

    <button class='btn' type='submit'>Add Party</button>
</form>